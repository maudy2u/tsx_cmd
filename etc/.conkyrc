conky.config = {
    own_window_hints='below',
    double_buffer = true,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'normal',


    alignment = 'top_right',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
	  default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,

    gap_x = 8,
    gap_y = 35,
    minimum_height = 5,
    maximum_width = 300,
	minimum_width = 300,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
}

